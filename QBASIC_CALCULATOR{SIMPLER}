CLS
PRINT "CALCULATOR-"
PRINT "ENTER YOUR EXPRESSION"
PRINT "EXAMPLE-58 * 20"
PRINT "THE TERMS SHOULD BE SEPARATED BY SPACE OR ERROR WILL OCCUR"
DO
INPUT " PLEASE ENTER THE FIRST NUMBER";X
INPUT " PLEASE ENTER THE SECOND NUMBER";Y

PRINT " WHAT DO U WANT TO DO WITH THEM?"
INPUT " PLEASE ENTER THE ARITHMETIC SYMBOLS";S$

IF S$ = "+" THEN
R = X + Y
END IF 
IF S$ = "-"  THEN 
R = X - Y 
END IF
IF S$ = "*"  THEN 
R = X * Y 
END IF
IF S$ = "/"  THEN 
R = X / Y 
END IF 
PRINT " THE CALCULATION = ";R
LOOP

END
